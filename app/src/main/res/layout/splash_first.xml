<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:src="@drawable/img2" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="Cửa sổ mở ra quá khứ"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy tận hưởng cuộc hành trình và tham gia khám phá lịch sử và nghệ thuật thông qua ứng dụng của chúng tôi."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button2"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="220dp"
        android:backgroundTint="#FAD96E"
        android:text="TIẾP THEO"
        android:textColor="@color/black" />
</LinearLayout>