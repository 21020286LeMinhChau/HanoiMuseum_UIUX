<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Khampha.DanhGia.DanhGia"
    android:background="#ececec"

    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"

            android:src="@drawable/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="5.0"
            android:textColor="@color/grayText"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:progress="15"
            android:progressTint="#FDBF07"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:progress="50"
            android:progressTint="#FCBE07"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:progress="50"
            android:progressTint="#FCBE07"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:progress="30"
            android:progressTint="#FEC007"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:numStars="5"
            android:progressTint="#FDBF07"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="4dp"
            android:progress="60"
            android:progressTint="#FDBF07"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

        <ImageView
            android:id="@+id/star6"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:srcCompat="@drawable/star_display" />

        <ImageView
            android:id="@+id/star7"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toRightOf="@id/star6"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:srcCompat="@drawable/star_display" />

        <ImageView
            android:id="@+id/star8"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toRightOf="@id/star7"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:srcCompat="@drawable/star_display" />

        <ImageView
            android:id="@+id/star9"
            android:layout_width="15dp"
            android:layout_height="20dp"

            android:layout_marginStart="2dp"
            app:layout_constraintLeft_toRightOf="@id/star8"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:srcCompat="@drawable/star_display" />

        <ImageView
            android:id="@+id/star10"
            android:layout_width="15dp"
            android:layout_height="20dp"

            android:layout_marginStart="2dp"

            app:layout_constraintLeft_toRightOf="@id/star9"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:srcCompat="@drawable/star_display" />

        <TextView
            android:id="@+id/num_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(200)"
            android:textColor="@color/grayText"

            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="@+id/star10"
            app:layout_constraintStart_toStartOf="@+id/star6"
            app:layout_constraintTop_toBottomOf="@+id/star8"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Xếp hạng và đánh giá"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView16"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Chia sẻ trải nghiệm của bạn để giúp đỡ người khác"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBar5" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Đăng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:imeOptions="actionDone"

            android:hint="Nhập đánh giá của bạn ở đây..."
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingBar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginEnd="2dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                app:textInputLayoutFocusedRectEnabled="true"
                tools:ignore="KeyboardInaccessibleWidget" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView20"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

<androidx.constraintlayout.widget.ConstraintLayout
android:id="@+id/show_screen_1"
android:layout_width="300dp"
android:layout_height="200dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:background="@drawable/bg_shape_white"
android:visibility="gone">

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/Close_Button_1"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/ic_close"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"/>

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bạn chưa đăng nhập"
    app:layout_constraintStart_toStartOf="parent"
    android:textColor="@color/black"
    android:fontFamily="@font/robotoslabmedium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.3"
    android:textSize="20sp"/>
<TextView
    android:id="@id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Có muốn đi đến đăng nhập ?"
    android:fontFamily="@font/robotoslabregular"
    android:textColor="@color/black"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text1"
    android:layout_marginTop="10dp"
    android:textSize="16sp"/>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/confirm_btn_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đi đến đăng nhập"
    android:fontFamily="@font/robotoslabmedium"
    android:backgroundTint="@color/yellow"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text2"
    app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>